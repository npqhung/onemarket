<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/tabbar_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/red"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/search_top_menu_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/ic_top_menu_right" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:textAppearance="@style/TabTitleTextAppearance"
            android:gravity="center"
            android:id="@id/title"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/str_footer_search"
            android:layout_toRightOf="@+id/search_back" />
    </RelativeLayout>

    <View
        android:background="@color/tabbar_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@color/white">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="16.0sp"
                android:textColor="@color/editext_color"
                android:gravity="left|center"
                android:layout_gravity="center_vertical"
                android:id="@+id/search_content"
                android:padding="5.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="5.0dip"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_search"
                android:layout_weight="1.0"
                android:inputType="text"
                android:imeOptions="actionSearch" />
        </LinearLayout>
