        <!--</LinearLayout>-->
        <!--<View android:background="@color/tabbar_divider" android:layout_width="fill_parent" android:layout_height="1.0dip" />-->
        <!--<LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="@dimen/second_tab_top_height">-->
        <!--<TextView android:textSize="16.0sp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@id/tv_timkiem_nhieunhat" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:text="@string/timkiem_nhieunhat" android:maxLines="1" android:drawableRight="@drawable/slide_right_more" />-->
